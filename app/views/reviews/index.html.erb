<table class = "table table-striped",  style = "width: 50%">
    <thead class = " thead thead-dark">
        <tr>
            <th>productName</th>
            <th>comment</th>
        </tr>
    </thead>
    <tbody>
            <% @reviews.each do |review| %>
                <tr class = "tr">
                    <td><%= link_to review.product.productName, review_path(review) %></td>
                    <td><%=review.comment %></td>
                </tr>
            <% end %>
    </tbody>
</table>
